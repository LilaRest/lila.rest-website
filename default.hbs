            <span>Reset to OS theme</span>
          </button>
        </div>
      </header>

      <main>
        {{!-- Main content inserted by children --}}
        {{{body}}}
      </main>

      <footer>
        <script src="assets/js/common/loader.js"></script>
        <script src="assets/js/common/theme-switcher.js" async defer></script>

        {{!-- Foot code injection --}}
        {{ghost_foot}} {{!-- FROM SETTINGS  --}}
        {{{block "foot"}}} {{!-- FROM CHILDREN TEMPLATES --}}
      </footer>
  </body>
  